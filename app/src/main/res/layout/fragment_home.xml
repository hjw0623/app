<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/membershipButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:text="멤버쉽 버튼" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            app:srcCompat="@android:drawable/ic_menu_search" />
    </LinearLayout>
    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/allButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/all_layout" />

            <ImageButton
                android:id="@+id/cuButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/cu_layout" />

            <ImageButton
                android:id="@+id/sevenButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/seven_layout" />

            <ImageButton
                android:id="@+id/emartButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/emart_layout" />

            <ImageButton
                android:id="@+id/gsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/gs_layout" />
        </LinearLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>